@inherits LayoutComponentBase

<RadzenComponents/>

<RadzenLayout Style="grid-template-columns: auto 1fr auto; grid-template-areas: 'rz-header rz-header rz-header' 'rz-sidebar rz-body rz-right-sidebar'">
    <RadzenHeader>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
            <RadzenSidebarToggle Click="@(() => sidebarExpanded = !sidebarExpanded)" />
            <RadzenLabel Text="Header" />
        </RadzenStack>
    </RadzenHeader>
    <NavMenu @rendermode="InteractiveAuto" @bind-leftSidebarExpanded="sidebarExpanded" />
    <RadzenBody>
        <div class="rz-p-4" style="overflow:hidden; display:block; width:100%; height:100%;">
            @Body
        </div>
    </RadzenBody>
    <RightSideBar @rendermode="InteractiveAuto" />
    <RadzenFooter>
        Footer
    </RadzenFooter>
</RadzenLayout>

@code {
    bool sidebarExpanded = true;
}
